
 <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Product List</h4>
                    <span>
                      <a href="/admin/add-product" class="btn btn-info" > Add Products
                    </a><a href="/admin/add-category" class="btn btn-success ml-5" > Add Category
                    </a><a href="/admin/add-user" class="btn btn-warning ml-5" > Add brand
                    </a>
                    </span>
                    <div class="table-responsive">
    <table id="productsTable" class="table mt-5">
                        <thead>
                          <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Gender</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Stock</th>
                            <th>Options</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each product}}
                          <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.category}}</td>
                            <td>{{this.brand}}</td>
                            <td>{{this.gender}}</td>
                            
                            <td><img style="width: 50px; height: 50px;" src="/pro-images/{{this.image.[1]}}" >
                            <img src="/pro-images/{{this.image.[0]}}" style="width: 50px; height: 50px;" alt=""></td>
                            <td>{{this.description}}</td>
                            <td>{{this.stock}}</td>
                            <td><a href="/admin/edit-product?id={{this._id}}" class="btn btn-success">Edit</a></td>
                            
                          </tr>
                            {{/each}}
                        </tbody>
                      </table>
                      </div>
                  </div>
                </div>
              </div>
              </div>
              </div>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>
                      


    

