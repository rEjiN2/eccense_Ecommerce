<div class="container-fluid " style="height: 100%;">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-4">
						<h2>Order <b>Details</b></h2>
					</div>
				
                </div>
            </div>
			
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        {{!-- <th>Customer</th> --}}
						<th>Address</th>
                        <th>NAme</th>
						<th>Order Date</th>						
                        					
						<th> Amount</th>
                        <th>Payment</th>
						<th>Products</th>
						<th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each order}}
                    <tr>
                        <td>{{@index}}</td>
                        {{!-- <td>{{../user.name}} </td> --}}
						<td>{{this.deliveryDetails.adress}}</td>
<td>{{this.deliveryDetails.name}}</td>
                        <td>{{this.date}}</td>                        
						
						<td>{{this.totalAmount}}</td>
                        <td>{{this.paymentMethod}}</td>
						<td><a href="/viewOrderProducts?id={{this._id}}" class="btn btn-primary">View Products</a></td>
						<td>
							
							<a class="btn btn-danger" href="/userCancelOrder?id={{this._id}}" onclick="return confirm('Are you sure to cancel this order')">CANCEL</a>
						    
					</td>
                    </tr>
					{{/each}}
                </tbody>
            </table>
			
        </div>
    </div>

