<!-- Section: Design Block -->
<section class="text-center text-lg-start mt-5">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Sign up now</h2>
            <form action="/signup" method="post">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" name="name" id="contact-name"  class="form-control" onkeyup="validateName()" />
                    <label class="form-label"  for="form3Example1">First name</label>
                    <b><span class="formerror" id="name-error"></span></b>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" name="lname"  class="form-control" id="contact-name" onkeyup="validateName()" />
                    <label class="form-label"  for="form3Example2">Last name</label>
                    <b><span class="formerror" id="name-error"></span></b>
                  </div>
                </div>
              </div>

              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="email" name="email"  class="form-control" id="contact-email"  onkeyup="validateEmail()" />
                <label class="form-label"  for="form3Example3">Email address</label>
                <b><span class="formerror" id="email-error"></span></b>
              </div>

              
               
               <!-- Number input -->
              <div class="form-outline mb-4">
                <input type="number" name="number"  class="form-control"  id="contact-phone"  onkeyup="validatePhone()" />
                <label class="form-label"  for="form3Example3">Mobile number</label>
                <b><span class="formerror" id="phone-error"></span></b> 
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <input type="password" name="password"  class="form-control" id="contact-password" onkeyup="validatePassword()" />
                <label class="form-label"  for="form3Example4">Password</label>
                <b><span class="formerror" id="password-error"></span></b>

              </div>

              

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4" id="contact-submit"  onclick='return validateForm()'>
                Sign up
              </button>
              <b><span class="formerror" id="submit-error"></span></b>

              <!-- Register buttons -->
              <div class="text-center">
                
               <a href="/login"> <button type="button" class="btn btn-link btn-floating mx-1">
                  Already have an account
                </button></a>

                
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
          alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
